doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/style.css')
    title Document
  body
    // component
    section.py-40.bg-gray-100.bg-opacity-50.h-screen
      .mx-auto.container.max-w-2xl.shadow-md(class='md:w-3/4')
        .bg-gray-100.p-4.border-t-2.bg-opacity-5.border-indigo-400.rounded-t
          .max-w-sm.mx-auto(class='md:w-full md:mx-0')
            .inline-flex.items-center.space-x-4
              img.w-10.h-10.object-cover.rounded-full(alt='User avatar', src='/img/users/default.jpg')
              h1.text-gray-600 Charly Olivas
        .bg-white.space-y-6
          .space-y-4.w-full.p-4.text-gray-500.items-center(class='md:inline-flex md:space-y-0')
            h2.max-w-sm.mx-auto(class='md:w-1/3') Account
            .max-w-sm.mx-auto(class='md:w-2/3')
              label.text-sm.text-gray-400 Email
              .w-full.inline-flex.border
                .pt-2.bg-gray-100.bg-opacity-50(class='w-1/12')
                  svg.w-6.text-gray-400.mx-auto(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z')
                input.p-2(type='email', class='w-11/12 focus:outline-none focus:text-gray-600', placeholder='email@example.com', disabled='')
          hr
          .space-y-4.w-full.p-4.text-gray-500.items-center(class='md:inline-flex md:space-y-0')
            h2.mx-auto.max-w-sm(class='md:w-1/3') Personal info
            .mx-auto.max-w-sm.space-y-5(class='md:w-2/3')
              div
                label.text-sm.text-gray-400 Full name
                .w-full.inline-flex.border
                  .pt-2.bg-gray-100(class='w-1/12')
                    svg.w-6.text-gray-400.mx-auto(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                      path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z')
                  input.p-2(type='text', class='w-11/12 focus:outline-none focus:text-gray-600', placeholder='Charly Olivas')
              div
                label.text-sm.text-gray-400 Phone number
                .w-full.inline-flex.border
                  .pt-2.bg-gray-100(class='w-1/12')
                    svg.w-6.text-gray-400.mx-auto(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                      path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z')
                  input.p-2(type='text', class='w-11/12 focus:outline-none focus:text-gray-600', placeholder='12341234')
          hr
          .w-full.space-y-4.p-8.text-gray-500.items-center(class='md:inline-flex md:space-y-0')
            h2.max-w-sm.mx-auto(class='md:w-4/12') Change password
            .w-full.max-w-sm.mx-auto.space-y-5.pl-2(class='md:w-5/12 md:pl-9 md:inline-flex')
              .w-full.inline-flex.border-b
                .pt-2(class='w-1/12')
                  svg.w-6.text-gray-400.mx-auto(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z')
                input.p-2.ml-4(type='password', class='w-11/12 focus:outline-none focus:text-gray-600', placeholder='New')
            .text-center(class='md:w-3/12 md:pl-6')
              button.text-white.w-full.mx-auto.max-w-sm.rounded-md.text-center.bg-indigo-400.py-2.px-4.inline-flex.items-center(class='focus:outline-none md:float-right')
                svg.w-4.text-white.mr-2(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                  path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15')
                                          Update
          hr
          .w-full.p-4.text-right.text-gray-500
            button.inline-flex.items-center.mr-4(class='focus:outline-none')
              svg.w-4.mr-2(fill='none', viewBox='0 0 24 24', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', stroke-width='2', d='M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16')
                                    Delete account